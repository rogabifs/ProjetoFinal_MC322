<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:ProjetoFinalMC322.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="ProjetoFinalMC322.Views.QuartosView">
    <Design.DataContext>
        <viewModels:QuartosViewModel/>
    </Design.DataContext>
    <StackPanel>
        <TextBlock Text="Lista de Quartos" FontSize="20" HorizontalAlignment="Center" Margin="10"/>
        <ListBox Items="{Binding Quartos}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Numero}" Width="50"/>
                        <TextBlock Text="{Binding Tipo}" Width="100"/>
                        <TextBlock Text="{Binding Disponivel}" Width="50"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </StackPanel>
</UserControl>
